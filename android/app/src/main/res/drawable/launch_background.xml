<?xml version="1.0" encoding="utf-8"?><!-- Modern Omani-inspired launch splash screen -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Omani-inspired gradient background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#1B4D3E"
                android:centerColor="#2E8B57"
                android:endColor="#4169E1"
                android:type="linear" />
        </shape>
    </item>

    <!-- App logo centered -->
    <item android:gravity="center">
        <shape android:shape="oval">
            <size
                android:width="120dp"
                android:height="120dp" />
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#F8F8FF"
                android:type="linear"
                android:angle="135" />
            <stroke
                android:width="1dp"
                android:color="#33FFFFFF" />
        </shape>
    </item>

    <!-- Tool icon placeholder (will be replaced by Flutter) -->
    <item android:gravity="center">
        <shape android:shape="rectangle">
            <size
                android:width="60dp"
                android:height="60dp" />
            <solid android:color="#4169E1" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
